                                <div class="col-md-6">
                                    {{ form_widget(form.plainPassword.second, { 'attr': {'placeholder': 'form.label_plain_password'|trans({}, 'SonataUserBundle')} }) }}
                                    {{ form_errors(form.plainPassword.second) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 control-label"></label>
                                <div class="col-md-8">
                                    <div style="clear:both"></div>
                                    <div class="form-actions">
                                        <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-primary" />
                                    </div>
                                </div>
                        </fieldset>
                    </form>
                </div>
