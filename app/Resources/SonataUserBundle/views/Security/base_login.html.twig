{% extends 'base.html.twig' %}

{% block fos_user_content %}

    <div class="row">
        <div class="col-md-12 page-content">
            <div class="inner-box category-content">
                <h2 class="title-2">
                    <i class="icon-user"></i>
                    {{ 'title_user_authentication'|trans({}, 'SonataUserBundle') }}
                </h2>

                <div class="row">
                    <div class="col-sm-12 login-box">
                        <form action="{{ path('fos_user_security_check') }}" method="POST"
                              class="fos_user_registration_register form-horizontal">
                            <fieldset>
                                {% if error %}
                                    <div class="alert alert-danger alert-error">{{ error|trans({}, 'FOSUserBundle') }}</div>
                                {% endif %}
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                                <div class="form-group required">
                                    <label class="col-md-4 control-label">{{ 'form.email'|trans({}, 'FOSUserBundle') }}</label>

                                    <div class="col-md-6">
                                        <div class="col-lg-9 col-sm-9">
                                            <div class="input-icon">
                                                <i class="icon-user fa"></i>
                                                <input type="text" class="form-control" id="username" name="_username" placeholder="{{ 'form.label_email'|trans({}, 'SonataUserBundle') }}" value="{{ last_username }}" required="required"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group required">
                                    <label class="col-md-4 control-label">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>

                                    <div class="col-md-6">
                                        <div class="col-lg-9 col-sm-9">
                                            <div class="input-icon">
                                                <i class="icon-lock fa"></i>
                                                <input type="password" class="form-control" id="password" name="_password" placeholder="{{ 'form.label_plain_password'|trans({}, 'SonataUserBundle') }}" required="required"/>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="form-group required">
                                    <label class="col-md-4 control-label">&nbsp;</label>

                                    <div class="col-md-6">
                                        <div class="col-lg-5 col-sm-5">
                                            <label for="remember_me">
                                                <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                                                {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                                            </label>
                                        </div>
                                        <div class="col-lg-5 col-sm-5">
                                            <a href="{{ path('fos_user_resetting_request') }}">{{ 'forgotten_password'|trans({}, 'SonataUserBundle') }}</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">&nbsp;</label>

                                    <div class="col-md-6">
                                        <div class="col-lg-9 col-sm-9">
                                            <input type="submit" id="_submit" name="_submit" class="btn btn-primary"
                                                   value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}"/>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

